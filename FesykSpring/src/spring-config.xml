<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       <bean id = "Viktor" class = "com.fesyk.heroes.Knight"/>
       <bean id = "Uther" class = "com.fesyk.heroes.Paladin">
              <constructor-arg ref = "DWords"/>
              <constructor-arg value = "5"/>
              <constructor-arg value = "6"/>
       </bean>
       <bean id = "DWords" class = "com.fesyk.speech.DivineWords"/>
       <bean id = "Spanky" class = "com.fesyk.animals.Cat"/>
       <bean id = "Avalan" class = "com.fesyk.heroes.Archmage">
              <property name = "license" value = "This is truly strong mage!"/>
              <property name = "pet" ref = "Spanky"/>
       </bean>
       <bean id = "Merlin" class = "com.fesyk.heroes.Mage">
               <property name = "damage" value ="15"/>
       </bean>
       <bean id = "HandfulOf" class = "com.fesyk.other.HandfulOfAshes"/>
       <bean id = "PickedSkel" class = "com.fesyk.other.PickedSkeleton"/>
       <bean id = "Lancelot" class = "com.fesyk.heroes.Knight"/>
       <bean id = "Smaug" class="com.fesyk.animals.Dragon">
              <property name="heroes">
                     <map>
                            <entry key="Lancelot" value-ref="Lancelot"/>
                            <entry key="Merlin" value-ref="Merlin"/>
                     </map>
              </property>
              <property name="remains">
                     <list>
                            <ref bean = "HandfulOf"/>
                            <ref bean = "PickedSkel"/>
                     </list>
              </property>
       </bean>

</beans>